{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "reviewer": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["approved"]
    },
    "snapshot_id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
            "minLength": 1
          },
          "gtd_outcome": {
            "type": "string",
            "enum": ["next_action", "project", "waiting_for", "calendar", "reference", "someday", "trash"]
          },
          "sensitivity": {
            "type": "string",
            "enum": ["normal", "pii", "legal", "financial"]
          },
          "notes": {
            "type": "string",
            "maxLength": 280
          }
        },
        "required": ["filename", "gtd_outcome"]
      }
    }
  },
  "required": ["reviewer", "status", "snapshot_id", "items"]
}