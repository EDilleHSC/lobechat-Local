{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Approval",
  "type": "object",
  "required": ["reviewer", "status", "snapshot_id", "items"],
  "properties": {
    "reviewer": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["approved", "revision", "rejected"] },
    "timestamp": { "type": "string", "format": "date-time" },
    "snapshot_id": { "type": "string", "minLength": 1 },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["filename", "gtd_outcome", "sensitivity"],
        "properties": {
          "filename": { "type": "string", "minLength": 1 },
          "gtd_outcome": {
            "type": "string",
            "enum": ["next_action","project","waiting_for","calendar","reference","someday","trash"]
          },
          "sensitivity": {
            "type": "string",
            "enum": ["normal","pii","legal","financial"]
          },
          "notes": { "type": "string", "maxLength": 280 }
        }
      }
    }
  },
  "additionalProperties": false
}
